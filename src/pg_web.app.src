        , {txn_collect_url, wh_txn_mcht_req_collect, []}
        , {txn_batch_collect_url, wh_txn_mcht_req_batch_collect, []}
        , {txn_info_collect_url, wh_txn_up_info_collect, []}
        , {txn_query_url, wh_txn_mcht_req_query, []}


