      , {txn_query_url, <<"query">>}
      , {txn_bankcard_verify_url, <<"bankcard_verify">>}

      %% waiting ...
      , {waiting_for_func, {mnesia, wait_for_tables, [[up_txn_log, mcht_txn_log], 40000]}}

      %% url routes
